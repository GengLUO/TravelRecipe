<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_navigation"
    app:startDestination="@id/home">

    <fragment
        android:id="@+id/search"
        android:name="be.kuleuven.travelrecipe.views.fragments.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" >
        <argument
            android:name="userID"
            app:argType="integer"
            android:defaultValue="1" />
    </fragment>
    <fragment
        android:id="@+id/home"
        android:name="be.kuleuven.travelrecipe.views.fragments.HomeFragment"

        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <argument
            android:name="userID"
            app:argType="integer"
            android:defaultValue="1" />
    </fragment>
    <fragment
        android:id="@+id/me"
        android:name="be.kuleuven.travelrecipe.views.fragments.MeFragment"
        android:label="fragment_me"
        tools:layout="@layout/fragment_me" >
        <argument
            android:name="userid"
            app:argType="integer"
            android:defaultValue="1" />
    </fragment>
</navigation>